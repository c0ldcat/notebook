let build = expand('<sfile>:p:h') . '/build.sh'
nmap <F9> :execute 'AsyncRun' . build <cr>
nmap <F10> :execute 'AsyncRun' . build . ' %:t' <cr>
if !exists("auto_build_on_write")
    let auto_build_on_write = 1
    au BufWritePost *.md :execute 'AsyncRun' . build .  ' %:t'
endif
set nowrap
set nocursorcolumn
set nocursorline
